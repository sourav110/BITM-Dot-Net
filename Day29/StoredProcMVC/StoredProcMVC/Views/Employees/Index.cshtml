@model IEnumerable<StoredProcMVC.Models.Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employee Info</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Designation</th>
            <th>NID</th>
            <th>Joining Date</th>
            <th>Blood Group</th>
            <th>Department</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Designation</td>
                <td>@employee.NID</td>
                <td>@employee.JoiningDate</td>
                <td>@employee.BloodGroup</td>
                <td>@employee.Department</td>
            </tr>
        }
    </tbody>
</table>

